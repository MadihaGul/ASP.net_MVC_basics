@model List<Person>
@{
    ViewData["Title"] = "People";
}

<h4>People List</h4>
<table class="table table-active table-hover table-primary">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Phone
            </th>
            <th>
                City
            </th>
            <th>
                Action
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name

                </td>
                <td>
                    @item.Phone

                </td>
                <td>
                    @item.City

                </td>
                <td>
                    <a href="#" onclick="location.href = '@Url.Action("DeletePerson","Person", new { id=item.PersonId})'">Delete</a>
                </td>
            </tr>
        }

    </tbody>

</table>
