@model Person


    <div class="row">

        <div class="col-md-3">
            @Model.Name
        </div>
        <div class="col-md-3">
            @Model.Phone

        </div>
        <div class="col-md-3">
            @Model.City
        </div>
        <div class="col-md-3">
            <a href="#" onclick="location.href = '@Url.Action("DeletePerson","Person", new { personId=Model.PersonId})'">Delete</a>
        </div>
    </div>




